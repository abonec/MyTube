<%= form_for @video, :html => {:multipart => true} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %>
    <br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <br />
    <%= f.text_area :description, %>
  </p>
  <p>
    <%= f.label :video_file %>
    <br />
    <%= f.file_field :source %>
  </p>
  <p><%= f.submit %></p>
<% end %>
